<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainMenu.home.about.AboutActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/putih"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="@string/ttg"
            app:titleTextColor="@color/colorPrimaryDark" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:background="@drawable/bg_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:contentDescription="@string/vm"
                android:id="@+id/btVisi"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/vm"
                    android:src="@drawable/ic_visi_misi"/>

                <TextView
                    android:contentDescription="@string/vm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vm"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"/>

            </RelativeLayout>

            <RelativeLayout
                android:contentDescription="@string/kd"
                android:id="@+id/btKontak"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="16dp">

                <ImageView
                    android:contentDescription="@string/kd"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_kontak_detail"/>

                <TextView
                    android:contentDescription="@string/kd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kd"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/hitam"/>

            </RelativeLayout>

            <RelativeLayout
                android:contentDescription="@string/pertanyaan"
                android:id="@+id/btEnq"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="16dp">

                <ImageView
                    android:contentDescription="@string/pertanyaan"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_enquiry"/>

                <TextView
                    android:contentDescription="@string/pertanyaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pertanyaan"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>