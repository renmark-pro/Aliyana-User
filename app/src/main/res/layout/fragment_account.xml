<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BgAbout"
    tools:context=".activity.fragment.AccountFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/putih"
        app:titleTextColor="@color/colorPrimaryDark"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/akun" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/layoutUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_person"
                        android:id="@+id/imgView"
                        app:civ_border_color="@color/goldtua"
                        app:civ_border_width="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgView"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nama"
                            android:textColor="@color/hitam"
                            android:textSize="20sp"
                            android:id="@+id/nama"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="@color/goldtua"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hp"
                            android:textSize="18sp"
                            android:id="@+id/telpon"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:contentDescription="@string/kpromo"
                        android:id="@+id/promo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:contentDescription="@string/kpromo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_kode_promo"
                            />

                        <TextView
                            android:contentDescription="@string/kpromo"
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/kpromo"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/goldtua"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="76dp"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/goldtua"/>

                    <LinearLayout
                        android:contentDescription="@string/voucher"
                        android:id="@+id/voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:contentDescription="@string/voucher"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_voucher"
                            />

                        <TextView
                            android:contentDescription="@string/voucher"
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/voucher"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/goldtua"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:contentDescription="@string/bantuan"
                        android:id="@+id/bantuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:contentDescription="@string/bantuan"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bantuan"
                            />

                        <TextView
                            android:contentDescription="@string/bantuan"
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/bantuan"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/goldtua"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="76dp"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/goldtua"/>

                    <LinearLayout
                        android:contentDescription="@string/keluar"
                        android:id="@+id/keluar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:contentDescription="@string/keluar"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tint="@color/goldtua"
                            android:src="@drawable/ic_keluar"
                            />

                        <TextView
                            android:contentDescription="@string/keluar"
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/keluar"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/goldtua"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>